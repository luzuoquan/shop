/* shopcart.wxss */
page {
   background-color: #eee; 
}
.weui-cell {
  padding: 10px;
}

.weui-cell__bd {
  position: relative;
}

.m-cart-empty {
  width: 100px;
  height: 100px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-60%);
  font-size: 12px;
  color: #808080;
  text-align: center;
}
.u-circle {
  background-color: #808080;
  border-radius: 50%;
  height: 80px;
  width: 80px;
  margin: 0 auto 5px;
}
.u-shopcart-item {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 5px 0;
}

.u-shopcart-thumbnails {
  width: 50px;
  height: 50px;
  vertical-align: middle;
}

.u-shopcart-title {
  font-size: 14px;
  color: #808080;
  max-width: 100px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.u-product-account {
  position: absolute;
  bottom: 5px;
  right: 5px;
}