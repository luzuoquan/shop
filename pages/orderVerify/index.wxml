<view class="page container">
  <view class="page__hd">
    <view class="weui-cells__title">收货地址</view>
    <view class="weui-cells weui-cells_after-title">{{address}}</view>
    <view class="weui-cells__title">商品单价¥</view>
    <view class="weui-cells weui-cells_after-title">{{product.price}}</view>
    <view class="weui-cells__title">商品运费</view>
    <view class="weui-cells weui-cells_after-title">¥ 0.00</view>
    <view class="weui-cells__title"></view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell__bd">
        <image class='u-shopcart-thumbnails' src='{{product.imageUrl}}'></image>
        <view class="u-shopcart-detail">
          <text class='u-shopcart-title'>{{product.productName}}</text>
          <text class="u-shopcart-number">数量:{{amount}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class='u-orderVerify-toolbal'>
    <text class='u-text'>总价¥:{{product.price * amount}}</text>
    <button bindtap='payAction' class="weui-btn mini-btn u-buy-btn" type="primary" size="mini">付款</button>
  </view>
</view>